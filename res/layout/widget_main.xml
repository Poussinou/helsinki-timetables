<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="15dp"
    style="@style/WidgetBackground">
	    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:orientation="vertical">
		    
		    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal">
			    	<ImageView
			    		android:id="@+id/widgetIcon"
			    		android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"
			    		android:src="@drawable/spacer" />
	    		    <TextView
				        android:id="@+id/header"
				        android:layout_width="fill_parent" 
				        android:layout_height="wrap_content"
				        android:paddingLeft="5dip"
				        android:gravity="left"
				        android:textSize="14sp"
				        android:text=""
				        android:singleLine="true"
				        android:maxLines="2"
				        style="@style/Text.Title" />
			</LinearLayout>

		    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:gravity="left"
			    android:orientation="horizontal">
			    	<ImageView
			    		android:id="@+id/widgetUpdatedIcon"
			    		android:paddingTop="2dip"
			    		android:layout_width="wrap_content"
			    		android:layout_height="wrap_content"
			    		android:visibility="invisible"
			    		android:src="@drawable/updated" />
	    		    <TextView
				        android:id="@+id/updatedTime"
				        android:layout_width="wrap_content" 
				        android:layout_height="wrap_content"
				        android:paddingLeft="5dip"
				        android:text=""
				        style="@style/Text.Updated" />
			</LinearLayout>
			<TextView
		        android:id="@+id/messageId"
		        android:layout_width="fill_parent" 
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:singleLine="false"
		        android:text=""
		        style="@style/Text" />
		    <TextView
		        android:id="@+id/time1"
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:text=""
		        style="@style/Text.Time" />
		    <TextView
		        android:id="@+id/time2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:text=""
		        style="@style/Text.Time" />
		     <TextView
		        android:id="@+id/time3"
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:text=""
		        style="@style/Text.Time" />
		    <TextView
		        android:id="@+id/time4"
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:text=""
		        style="@style/Text.Time" />
		    <TextView
		        android:id="@+id/time5"
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:text=""
		        style="@style/Text.Time" />
		    <TextView
		    	android:id="@+id/lastShownId"
		    	android:layout_width="wrap_content" 
		        android:layout_height="wrap_content"
		    	android:visibility="gone"
		    	android:text="0" />
		    	
		</LinearLayout>
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    android:layout_width="fill_parent"
			    android:layout_height="40dip"
			    android:orientation="horizontal">
				<Button
					android:id="@+id/btnWidgetPrevID"
					android:layout_weight="1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:background="@android:color/transparent"
					android:drawableBottom="@drawable/widget_button_prev" />
				<Button
					android:id="@+id/btnWidgetPrevDisabledID"
					android:visibility="gone"
					android:clickable="false"
					android:layout_weight="1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:background="@android:color/transparent"
					android:drawableBottom="@drawable/widget_prev_disabled" />
				<Button
					android:id="@+id/btnWidgetRefreshID"
					android:layout_weight="1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:background="@android:color/transparent"
					android:drawableBottom="@drawable/widget_button_refresh" />
				<Button
					android:id="@+id/btnWidgetNextID"
					android:layout_weight="1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:background="@android:color/transparent"
					android:drawableBottom="@drawable/widget_button_next" />
				<Button
					android:id="@+id/btnWidgetNextDisabledID"
					android:visibility="gone"
					android:clickable="false"
					android:layout_weight="1"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:background="@android:color/transparent"
					android:drawableBottom="@drawable/widget_next_disabled" />
			</LinearLayout>
</LinearLayout>